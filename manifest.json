{
  "manifest_version": 3,
  "name": "Dark Mode Everywhere",
  "description": "Force dark mode on any website with per-site controls and custom themes.",
  "version": "1.0.1",

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "action": {
    "default_title": "Nocturne",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "24": "icons/icon-24.png",
      "32": "icons/icon-32.png"
    }
  },

  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "options_page": "options.html",
  "content_scripts": [
    { "matches": ["<all_urls>"], "js": ["content.js"], "run_at": "document_start" }
  ],
  "commands": {
    "toggle-dark-mode": {
      "suggested_key": { "default": "Alt+D", "mac": "Alt+D" },
      "description": "Toggle Dark Mode on the current site"
    }
  }
}
